{
    "name": "vscode-chatbox-extension",
    "displayName": "VS Code Chatbox Extension",
    "description": "A chat box extension for VS Code with speech recognition",
    "version": "0.0.3",
    "engines": {
        "vscode": "^1.60.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onView:chatboxView",
        "onCommand:chatbox.toggleListening",
        "*"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "chatbox-sidebar",
                    "title": "Code Whisper",
                    "icon": "$(comment-discussion)"
                }
            ]
        },
        "views": {
            "chatbox-sidebar": [
                {
                    "id": "chatboxView",
                    "name": "Code with Speech"
                }
            ]
        },
        "commands": [
            {
                "command": "chatbox.toggleListening",
                "title": "Toggle Speech Recognition",
                "icon": "$(mic)"
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "chatbox.toggleListening",
                    "when": "view == chatboxView",
                    "group": "navigation"
                }
            ]
        },
        "keybindings": [
            {
                "command": "chatbox.toggleListening",
                "key": "alt",
                "mac": "option"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/node": "^14.14.37",
        "@types/vscode": "^1.60.0",
        "@types/ws": "^8.5.12",
        "@typescript-eslint/eslint-plugin": "^4.22.0",
        "@typescript-eslint/parser": "^4.22.0",
        "eslint": "^7.25.0",
        "typescript": "^4.2.4"
    },
    "dependencies": {
        "ws": "^8.18.0"
    }
}