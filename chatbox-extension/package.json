{
    "name": "vscode-chatbox-extension",
    "displayName": "VS Code Chatbox Extension",
    "description": "A chat box extension for VS Code",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.60.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onView:chatboxView",
        "onCommand:chatbox.test"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "chatbox-sidebar",
                    "title": "Code Whisper",
                    "icon": "$(comment-discussion)"
                }
            ]
        },
        "views": {
            "chatbox-sidebar": [
                {
                    "id": "chatboxView",
                    "name": "Code with Speech"
                }
            ]
        },
        "commands": [
            {
                "command": "chatbox.sendMessage",
                "title": "Send Chat Message"
            },
            {
                "command": "chatbox.test",
                "title": "Test Chatbox Extension"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.60.0",
        "@types/node": "^14.14.37",
        "@typescript-eslint/eslint-plugin": "^4.22.0",
        "@typescript-eslint/parser": "^4.22.0",
        "eslint": "^7.25.0",
        "typescript": "^4.2.4"
    }
}