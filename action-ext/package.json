{
  "name": "voice-command-extension",
  "displayName": "Voice Command Extension",
  "description": "Execute voice commands from a simulated backend in VS Code",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.94.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:voiceCommandSteps",
    "onCommand:extension.executeVoiceCommands"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "voice-command-explorer",
          "title": "Voice Commands",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "voice-command-explorer": [
        {
          "id": "voiceCommandSteps",
          "name": "Voice Command Steps"
        }
      ]
    },
    "commands": [
      {
        "command": "extension.executeVoiceCommands",
        "title": "Execute Voice Commands"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.94.0",
    "@types/node": "14.x",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "eslint": "^7.27.0",
    "typescript": "^4.3.2"
  }
}